<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:background="@color/transparent_light_cc">

    <cn.demomaster.qdrouter_library.view.StateView
        android:id="@+id/sv_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="6dp"
        android:textColor="@color/black"
        android:textSize="@dimen/quickdev_title_text_size"
        android:gravity="center_vertical" />
    <!-- <cn.demomaster.qdrouter_library.view.ImageTextView
         android:id="@+id/it_actionbar_common_left"
         android:layout_width="@dimen/activity_actionbar_button_width"
         android:layout_height="match_parent"
         android:padding="@dimen/dp_6"
         android:textColor="@color/black"
         android:textSize="@dimen/quickdev_title_text_size"
         android:gravity="center_vertical"
         android:src="@drawable/ic_warning_black_24dp" />-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:gravity="left|center_vertical"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <cn.demomaster.qdrouter_library.view.ImageTextView
        android:id="@+id/itv_retry"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="9dp"
        android:paddingRight="12dp"
        android:gravity="left|center_vertical"
        android:layout_gravity="right"
        android:singleLine="true"
        app:quick_text=""
        app:quick_textSize="14sp"
        android:textColor="@color/dodgerblue" />

</FrameLayout>
